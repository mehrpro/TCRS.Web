<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TCRS</title>
    @*   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@
    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.css" rel="stylesheet">
    @*	<link href="~/css/pricing.css" rel="stylesheet">
    *@

    <link href="~/fonts/sahel/sahel.css" rel="stylesheet">


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">دانشگاه آزاد اسلامی</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">خانه</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link " href="#" id="dropdown01"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">مدیریت کلاس</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" asp-page="/Companies/Index">ثبت کلاس</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Applicants">واحد درخواست کننده</a>
                                <a class="dropdown-item" href="#">گزینه 3</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link " href="#" id="dropdown02"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">مدیریت سامانه</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown02">
                                <a class="dropdown-item" asp-action="Register" asp-controller="Account">کاربر جدید</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="ManageRole">مجوز</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="ManageRole">اساتید</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="ManageRole">دروس</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="ClassTypes">نوع برگزاری کلاس</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="ClassTimeTypes">زمان برگزاری کلاس</a>
                                <a class="dropdown-item" href="#">گزینه 3</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="container">
        @RenderBody()
    </main>


    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 1400 - نت یار
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
