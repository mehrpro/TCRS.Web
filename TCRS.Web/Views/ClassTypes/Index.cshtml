@model IEnumerable<TCRS.Web.ViewModels.ClassTypeViewModel.ClassTypeIndexViewModel>

@{
    ViewData["Title"] = "فهرست";
}

<h3>نوع برگزاری کلاس</h3>

<p>
    <a asp-controller="ClassTypes" asp-action="Create" class="btn btn-primary">افزودن</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassTypeTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassTypeTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClassTypeID">ویرایش</a> |
                    <a asp-action="Details" asp-route-id="@item.ClassTypeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClassTypeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
