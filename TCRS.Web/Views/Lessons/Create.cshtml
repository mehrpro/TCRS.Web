@model TCRS.Web.ViewModels.LessonViewModel.LessonCreateViewModel

@{
    ViewData["Title"] = "درس جدید";
}
<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LessonTitle" class="control-label"></label>
                <input asp-for="LessonTitle" class="form-control" />
                <span asp-validation-for="LessonTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfCourseUnits" class="control-label"></label>
                <input asp-for="NumberOfCourseUnits" class="form-control" />
                <span asp-validation-for="NumberOfCourseUnits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonCode" class="control-label"></label>
                <input asp-for="LessonCode" class="form-control" />
                <span asp-validation-for="LessonCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PresentationCode" class="control-label"></label>
                <input asp-for="PresentationCode" class="form-control" />
                <span asp-validation-for="PresentationCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">انصراف</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
