@model IEnumerable<TCRS.Web.ViewModels.LessonViewModel.LessonIndexViewModel>

@{
    ViewData["Title"] = "فهرست دروس";
}



<p>
    <a asp-action="Create" class="btn btn-primary">جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LessonCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCourseUnits)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.LessonCode
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfCourseUnits)
                </td>

                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.LessonID">جزئیات</a> |
                    @if (item.IsActive)
                    {
                        <a class="btn btn-warning btn-sm">فعال</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-warning btn-sm">غیرفعال</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
